.products-section{
  width: 100%;
  height: 300px;
  display: grid;
  grid-template-columns: repeat(4,1fr);
  /* grid-auto-rows: 200px; */
  /* grid-gap: 20px; */
}

.product-block {
  display: inline-block;
  vertical-align:top;

  /* background-color: #ffd8a8; */
  /* padding: 1px; */
  color: #d9480f;
}

 /* .product-block:nth-child(n+2){
