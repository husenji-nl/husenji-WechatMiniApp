.product-block:first-child {
  grid-column-start: 1; 
  grid-column-end: 3; 
  grid-row-start: 1; 
  grid-row-end: 3;
   position: relative;
}

.product-block:nth-child(2) {
  grid-column-start: 3;
  grid-column-end: 4;
  grid-row-start: 1; 
  grid-row-end: 2;
   position: relative;
}

