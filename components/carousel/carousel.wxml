<swiper indicator-dots="{{indicatorDots}}"
    autoplay="{{autoplay}}" 
    interval="{{interval}}"
    duration="{{duration}}"
>
    <block wx:for-items="{{imgUrls}}" wx:key="id">
        <swiper-item>
            <image src="{{item}}" class="slideImage" />
        </swiper-item>
    </block>
</swiper>